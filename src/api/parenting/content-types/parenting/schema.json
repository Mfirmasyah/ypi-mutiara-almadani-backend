{
  "kind": "collectionType",
  "collectionName": "parentings",
  "info": {
    "singularName": "parenting",
    "pluralName": "parentings",
    "displayName": "Parenting",
    "description": "Artikel parenting dan tips pengasuhan anak"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": { "type": "string", "required": true },
    "excerpt": { "type": "text", "required": true },
    "content": { "type": "richtext", "required": true },
    "category": {
      "type": "enumeration",
      "enum": ["pola-asuh", "teknologi", "komunikasi", "kesehatan", "karakter", "pendidikan"],
      "required": true
    },
    "author": { "type": "string", "required": true },
    "date": { "type": "date", "required": true },
    "readTime": { "type": "string", "required": true },
    "image": {
      "type": "media",
      "multiple": false,
      "required": true,
      "allowedTypes": ["images"]
    },
    "views": { "type": "integer", "default": 0 },
    "tags": { "type": "json" },
    "slug": { "type": "uid", "targetField": "title" },
    "isFeatured": { "type": "boolean", "default": false }
  }
}